page {
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.wrap {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.header {
    display: flex;
    align-items: flex-end;
    box-sizing: border-box;
    width: 100%;
    padding: 20rpx 20rpx 10rpx 20rpx;
}

.myIconWrap {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 70rpx;
    height: 70rpx;
    background-color: #f8b2b2;
    border-radius: 50%;
}

.myIcon {
    width: 40rpx;
    height: 40rpx;
}

.message {
    padding-top: 30rpx;
    width: 100%;
    background-color: #f2f2f2;
    -webkit-overflow-scrolling: touch
}

.search {
    border-top: 1rpx solid #ccc;
    width: 100%;
    height: 150rpx;
    background-color: #eee;
}

.inside {
    padding: 10rpx 20rpx;
}

.search_content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: relative;
}

.search_content image {
    width: 60rpx;
    height: 60rpx;
    margin-left: 20rpx;
}

.input {
    flex: 1;
    background-color: #fff;
    border-radius: 20rpx;
}

.input view {
    width: 100%;
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-weight: bold;
}

.input input {
    height: 70rpx;
    line-height: 70rpx;
    padding: 0 10rpx;
}

.profile {
    overflow: hidden;
    display: block;
    width: 80rpx;
    height: 80rpx;
    background-color: #fff;
    margin-right: 30rpx;
    border-radius: 100%;
}

.profile image {
    width: 100%;
    height: 100%;
}

.talk {
    background-color: #fff;
    font-size: 30rpx;
    padding: 15rpx;
    max-width: 80%;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
}


.profile image {
    width: 100%;
    height: 100%;
    transform: rotateY(180deg);
}

.message_content {
    overflow: auto;
}

.msg {
    display: flex;
    margin-bottom: 50rpx;
}


.userMsg {
    flex-direction: row-reverse;
}

text {
    display: inline-block;
    width: 100%;
    height: 100%;
    word-break: break-all;
}


.sendBtn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 70rpx;
    height: 70rpx;
    background-color: #f8b2b2;
    border-radius: 50%;
    margin-left: 20rpx;
}

.sendBtn image {
    width: 50rpx;
    height: 50rpx;
    margin: 0;
}

.popupWrap {
    overflow: hidden;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
}

.popup_header {
    display: flex;
    flex-direction: column;
    margin-top: 140rpx;
    align-items: center;
}

.userAvatarUrl {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    overflow: hidden;
}

.userName {
    margin: 20rpx 0;
}

.dianshu {
    margin-top: 40rpx;
    color: #888;
}

.popup_bodyer {
    margin-top: 50rpx;
}

.item {
    display: flex;
    align-items: center;
    padding-bottom: 15rpx;
    border-bottom: 1rpx solid #eee;
    margin-bottom: 50rpx;
}

.item image {
    width: 30rpx;
    height: 30rpx;
}
.item view{
    margin-left: 20rpx;
}